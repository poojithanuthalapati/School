@model School.Models.employeeDetails

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Class Subscription</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 20px;
        }
        .form-container {
            max-width: 600px;
            margin: 0 auto;
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        h2 {
            color: #333;
            text-align: center;
            margin-bottom: 20px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }
        input[type="text"],
        input[type="email"],
        input[type="tel"],
        input[type="number"],
        select {
            width: 100%;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-sizing: border-box;
        }
        .submit-btn {
            background-color: #4CAF50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            width: 100%;
        }
        .submit-btn:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>Employee Class Subscription</h2>
        <form action="/subscription/employeeupdate" method="post">

            <input type="hidden" id="empUserName" name="empUserName" value=@Model.empUserName />

            <div class="form-group">
                <label for="firstName">firstName:</label>
                <input type="text" id="firstName" name="firstName" value="@Model.firstName" required>
            </div>

            <div class="form-group">
                <label for="lastName">lastName:</label>
                <input type="text" id="lastName" name="lastName" value="@Model.lastName" required>
            </div>

            <div class="form-group">
                <label for="empUserName">empUserName:</label>
                <input type="text" id="empUserName" name="empUserName" value="@Model.empUserName" required>
            </div>

            <div class="form-group">
                <label for="empPassword">empPassword:</label>
                <input type="text" id="empPassword" name="empPassword" value="@Model.empPassword" required>
            </div>

            <div class="form-group">
                <label for="age">age:</label>
                <input type="number" id="age" name="age" value="@Model.age" required>
            </div>

            <div class="form-group">
                <label for="emailAddress">emailAddress:</label>
                <input type="email" id="emailAddress" name="emailAddress" value="@Model.emailAddress" required>
            </div>

            <div class="form-group">
                <label for="phoneNumber">phoneNumber:</label>
                <input type="text" id="phoneNumber" name="phoneNumber" value="@Model.phoneNumber" required>
            </div>

            <div class="form-group">
                <label for="yearJoined">yearJoined:</label>
                <input type="number" id="yearJoined" name="yearJoined" value="@Model.yearJoined" required>
            </div>


            <button type="submit" class="submit-btn">Submit</button>
        </form>
    </div>
</body>
</html>